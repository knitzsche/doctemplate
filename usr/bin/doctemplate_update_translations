FUNCTIONS=/usr/lib/doctemplate/doctemplate_functions

. ./environment
. $FUNCTIONS
linguas=$(grep -v "^#" LINGUAS)
f_pot
for lingua in $linguas
do
    . /usr/lib/doctemplate/doctemplate_functions $lingua
    f_po
done

exit 0
